editor = {Goodchild, M and Kimerling, A J},
pages = {Chapter 5},
publisher = {A Web Book, Santa Barbara, CA, USA: National Center for Geographic Information {\&} Analysis},
title = {{EASE-Grid: A Versatile Set of Equal-Area Projections and Grids}},
url = {http://www.ncgia.ucsb.edu/globalgrids-book/ease{\_}grid/},
year = {2002}
}
