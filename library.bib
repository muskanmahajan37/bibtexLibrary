keywords = {Data mining,Neurons,Normalized Difference Vegetation Index (NDVI),Sammon's projection,Spatiotemporal phenomena,Syst{\`{e}}me Pour l'Observation de la Terre (SPOT)-VEGE,Time series analysis,Trajectory,Vectors,Vegetation mapping,phenology,self-organizing map (SOM),synoptic state,time series},
month = {apr},
number = {4},
pages = {1914--1921},
shorttitle = {Geoscience and Remote Sensing, IEEE Transactions o},
title = {{Exploring Spatiotemporal Phenological Patterns and Trajectories Using Self-Organizing Maps}},
