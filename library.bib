journal = {Global Change Biology},
keywords = {Ecosystem photosynthesis,Meta-analysis,Net ecosystem exchange,Plant biomass,Plant productivity,Precipitation,Respiration,Warming},
number = {2},
pages = {927--942},
pmid = {285878000021},
title = {{Responses of terrestrial ecosystems to temperature and precipitation change: A meta-analysis of experimental manipulation}},
volume = {17},
year = {2011}
}
@article{Li2008,
