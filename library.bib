@article{mohino11_sahel_rainfall,
abstract = {Decadal Sahelian rainfall variability was mainly
driven by sea surface temperatures (SSTs) during the
twentieth century. At the same time SSTs showed a
marked long-term global warming (GW)
trend. Superimposed on this long-term trend decadal
