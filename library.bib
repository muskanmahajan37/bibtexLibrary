doi = {10.1098/rsta.2008.0131},
issn = {1364-503X},
journal = {Philosophical transactions. Series A, Mathematical, physical, and engineering sciences},
keywords = {Aerosols,Aerosols: chemistry,Atmosphere,Atmosphere: chemistry,Climate,Conservation of Natural Resources,Conservation of Natural Resources: methods,Disasters,Disasters: prevention {\&} control,Ecosystem,Engineering,Engineering: trends,Greenhouse Effect,Sulfates,Sulfates: chemistry},
month = {nov},
number = {1882},
pages = {4007--4037},
pmid = {18757276},
