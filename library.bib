keywords = {Atmosphere,Atmospheres,Climate,Evolution,Ices,Mars,Polar geology},
month = {jan},
number = {1},
pages = {1--19},
title = {{Global modelling of the early martian climate under a denser CO2 atmosphere: Water cycle and ice evolution}},
url = {http://www.sciencedirect.com/science/article/pii/S0019103512004290},
volume = {222},
year = {2013}
