@article{johnson11,
abstract = {Climate change impact studies for water resource
applications, such as the development of projections
of reservoir yields or the assessment of likely
frequency and amplitude of drought under a future
climate, require that the year-to-year persistence
in a range of hydrological variables such as
catchment average rainfall be properly
