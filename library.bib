@article{whitlock06,
abstract = {The history of the low-elevation forest and
forest-steppe ecotone on the east side of the Andes
is revealed in pollen and charcoal records obtained
from mid-latitude lakes. Prior to 15,000 cat yr BP,
the vegetation was characterized by steppe
vegetation with isolated stands of Nothofagus. The
