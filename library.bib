journal = {Climate of the Past},
number = {1},
pages = {115--129},
publisher = {COPERNICUS GESELLSCHAFT MBH},
title = {{An introduction to stable water isotopes in climate models: benefits of forward proxy modelling for paleoclimatology}},
volume = {6},
year = {2010}
}
