@article{zhu07,
abstract = {The fifth-generation Pennsylvania State
University-NCAR Mesoscale Model (MM5)-based regional
climate model (CMM5) capability in simulating the
interannual variations of U. S. precipitation and
surface air temperature during 1982-2002 is
evaluated with a continuous baseline integration
