@article{asmerom07,
abstract = {Holocene climate change has likely had a profound
influence on ecosystems and culture. A link between
solar forcing and Holocene climate, such as the
Asian monsoon, has been shown for some regions,
although no mechanism for this relationship has been
suggested. Here we present the first high-resolution
complete Holocene climate record for the North
American monsoon region of the southwestern United
