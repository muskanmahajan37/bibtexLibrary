@article{parmesan_and_yohe03,
abstract = {Causal attribution of recent biological trends to
climate change is complicated because non-climatic
influences dominate local, short-term biological
changes. Any underlying signal from climate change
is likely to be revealed by analyses that seek
systematic trends across diverse species and
geographic regions; however, debates within the
