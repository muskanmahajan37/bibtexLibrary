author = {Trenberth, K E and Branstator, G W and Karoly, D and Kumar, A and Lau, N C and Ropelewski, C},
journal = {Journal of Geophysical Research-Oceans},
month = {jun},
number = {C7},
pages = {14291--14324},
publisher = {AMER GEOPHYSICAL UNION},
title = {{Progress during TOGA in understanding and modeling global teleconnections associated with tropical sea surface temperatures}},
volume = {103},
year = {1998}
}
