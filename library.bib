@article{Trenberth:2005zr,
abstract = {Using the 40-yr European Centre for Medium-Range
Weather Forecasts (ECMWF) Re-Analysis (ERA-40) for
1958 to 2001, adjusted for bias over the southern
oceans prior to 1.979, an analysis is made of global
patterns of monthly mean anomalies of atmospheric
mass, which is approximately conserved globally. It
