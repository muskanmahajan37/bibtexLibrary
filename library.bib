@article{bollasina11_aerosols,
abstract = {Observations show that South Asia underwent a
widespread summertime drying during the second half
of the 20th century, but it is unclear whether this
trend was due to natural variations or human
activities. We used a series of climate model
experiments to investigate the South Asian monsoon
