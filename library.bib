author = {Gallant, Ailie J E and Gergis, Joelle},
doi = {10.1029/2010WR009832},
journal = {Water Resources Research},
month = {apr},
pages = {W00G04},
publisher = {AMER GEOPHYSICAL UNION},
title = {{An experimental streamflow reconstruction for the River Murray, Australia, 1783-1988}},
volume = {47},
year = {2011}
}
