@article{salzer09_bristlecone,
abstract = {Great Basin bristlecone pine (Pinus longaeva) at 3
sites in western North America near the upper
elevation limit of tree growth showed ring growth in
the second half of the 20th century that was greater
than during any other 50-year period in the last
